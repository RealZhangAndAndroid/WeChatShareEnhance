<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_gravity="center"
    android:background="#3F51B5"
    android:layout_alignParentBottom="true"
    android:paddingBottom="@dimen/activity_vertical_margin_card"
    android:paddingLeft="@dimen/activity_horizontal_margin_card"
    android:paddingRight="@dimen/activity_horizontal_margin_card"
    android:paddingTop="@dimen/activity_vertical_margin_card"
    tools:showIn="@layout/activity_main">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/message_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/weichatshare" />

            <RadioButton
                android:id="@+id/target_scene_session"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:onClick="onRadioButtonClicked"
                android:text="@string/target_scene_session"
                android:textColor="#FFFFFF" />

            <ImageView
                android:id="@+id/freindsButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/message_button"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_toEndOf="@+id/message_button"
                android:scaleType="fitXY"
                android:src="@drawable/frieds" />

            <RadioButton
                android:id="@+id/target_scene_timeline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="@string/target_scene_timeline"
                android:textColor="#FFFFFF" />

        </RadioGroup>

    </LinearLayout>


</LinearLayout>