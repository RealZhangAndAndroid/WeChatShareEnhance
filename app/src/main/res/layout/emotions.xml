<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:background="#3F51B5"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin_card"
    android:paddingLeft="@dimen/activity_horizontal_margin_card"
    android:paddingRight="@dimen/activity_horizontal_margin_card"
    android:paddingTop="@dimen/activity_vertical_margin_card"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="@string/Emotions"
            android:textColor="#9FA8DA"
            android:textSize="10dp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/doc"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/doc"
                android:textColor="#3F51B5" />

            <ImageView
                android:id="@+id/montagne"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/montagne"
                android:textColor="#3F51B5" />

            <ImageView
                android:id="@+id/rook"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/rook"
                android:textColor="#3F51B5" />

            <ImageView
                android:id="@+id/twitch"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/twitch"
                android:textColor="#3F51B5" />

            <ImageView
                android:id="@+id/fuze"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/fuze"
                android:textColor="#3F51B5" />

            <ImageView
                android:id="@+id/glaz"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/glaz"
                android:textColor="#3F51B5" />

            <ImageView
                android:id="@+id/tachanka"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/tachanka"
                android:textColor="#3F51B5" />

            <ImageView
                android:id="@+id/kapkan"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/kapkan"
                android:textColor="#3F51B5" />



            <ImageView
                android:id="@+id/sledge"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/sledge"
                android:textColor="#3F51B5" />

            <ImageView
                android:id="@+id/smoke"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/smoke"
                android:textColor="#3F51B5" />

            <ImageView
                android:id="@+id/thatcher"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/thatcher"
                android:textColor="#3F51B5" />

            <ImageView
                android:id="@+id/mute"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/mute"
                android:textColor="#3F51B5" />

            <ImageView
                android:id="@+id/ash"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/ash"
                android:textColor="#3F51B5" />

            <ImageView
                android:id="@+id/castle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/castle"
                android:textColor="#3F51B5" />



            <ImageView
                android:id="@+id/pulse"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/pulse"
                android:textColor="#3F51B5" />

            <ImageView
                android:id="@+id/thermite"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/thermite"
                android:textColor="#3F51B5" />

            <ImageView
                android:id="@+id/bandit"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/bandit"
                android:textColor="#3F51B5" />


            <ImageView
                android:id="@+id/blitz"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/blitz"
                android:textColor="#3F51B5" />



            <ImageView
                android:id="@+id/iq"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/iq"
                android:textColor="#3F51B5" />


            <ImageView
                android:id="@+id/jager"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/jager"
                android:textColor="#3F51B5" />






        </LinearLayout>


    </ScrollView>


</LinearLayout>