<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:background="#3F51B5"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin_card"
    android:paddingLeft="@dimen/activity_horizontal_margin_card"
    android:paddingRight="@dimen/activity_horizontal_margin_card"
    android:paddingTop="@dimen/activity_vertical_margin_card"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="@string/Image"
            android:textColor="#9FA8DA"
            android:textSize="10dp"
            android:textStyle="bold" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5C6BC0"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivs"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_gravity="center_horizontal"
            android:onClick="newPhoto"/>

        <Button
            android:id="@+id/button04"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:onClick="weichat_image_button"
            android:text="@string/send_button"
            android:textColor="#3F51B5"
            android:layout_gravity="bottom|right"
            android:layout_alignBottom="@+id/ivs"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:src="@drawable/plus_icon"
            android:id="@+id/button2"
            android:onClick="newPhoto"
            android:layout_alignBottom="@+id/ivs"
            android:layout_alignParentStart="true" />


    </RelativeLayout>


</LinearLayout>